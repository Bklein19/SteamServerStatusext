{
  "manifest_version": 2,

  "name": "SteamServerStatus",
  "description": "This extension will give a report on the current Steam server status",
  "version": "1.0",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
    "content_scripts": [
    {
	"matches" : ["<all_urls>"],    
        "js": [ 
            "jquery-3.3.1.min.js" ]
    } ]
,
  
  "permissions": ["activeTab", "*://*/*"]
}
